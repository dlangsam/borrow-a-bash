
<span><h5>Listing tools:</h5>

<a href = "#" class = "js-item-toggle-activation" data-id = "<%=@item.id%>">
	<%if @item.is_published %>
	Deactivate
	<% else %>
	Activate
	<% end %>
</a>
 <%= link_to 'Delete', user_item_url(current_user, @item), method: :delete, data: {confirm: 'Are you sure?'} %>
</span>
<div class = "user-item">
<h1><%= @item.name %></h1>
<% if @item.description %>
<p><%= @item.description %></p>
<% end %> 
</div>

