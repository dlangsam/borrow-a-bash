<%if @items.size > 0 %>
	<ul>
	<% @items.all.each do |item| %>
		<li><%= item.name %></li>
	<% end %>
	</ul>
<% end %>

<button class = "btn js-add-item"> Add an item to share </button>



<div class="modal fade js-modal js-new-item-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header modal-login-header">
        <!-- Close button -->
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span>&times;</span>
        </button>

        <h2>New Item</h2>
      </div>

		   <div class="modal-body modal-new-item">
		   <%= form_for [@current_user, @item] do |f| %>
				<%= f.label :name%>
				<%= f.text_field :name%>
				<br>
				<%= f.label :description%>
				<%= f.text_area :description %>
				<br>
				<%= f.button id: "form-button", class: "btn" %>
		<%end%>
				
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->