<div class = "row">
	<div class= "header">
	<div class = "col-sm-6 col-xs-12">
		<%= image_tag("banner.jpg", :alt => "borrow a bash logo", :class => "header-logo")%>
		</div>

	<div class = "col-sm-6 col-xs-12">
		<div class = "menu-options">
			
				<% if user_signed_in? %>
				<div class = "menu-option">
				<%=link_to 'Your items', user_items_url(current_user.id)%>
				</div>
				<div class = "menu-option">
			
      			<a href = "/user/<%=current_user.id%>/items"> <button type="button" class="btn header-btn">
      			<i class="material-icons md-36">bubble_chart</i>
      			<br>Your items
				</button></a>
				</div>
				<div class = "menu-option">
					<div class = "dropdown">
	      			<button class="btn header-btn dropdown-toggle" type="button" data-toggle="dropdown"> <i class="material-icons md-36">account_circle</i><br>
	       			 Welcome, <%= current_user.username %>  <span class="caret"></span>
	      			</button>
					<ul class="dropdown-menu">
	      				<li><a href="/users/edit">My Profile</a></li>
	      				<li><a href="/users/sign_out" data-method="delete">Sign Out</a></li>
	    			</ul>
				</div>

		</div>
		<% else %>
		<div class = "menu-option">
      		<button class = "btn header-btn register js-register"> Register</button></div>
		<div class = "menu-option">
      		<button class = "btn header-btn login js-login">Sign in</button></div>
      	<% end %>
		<div class = "menu-option">
      <button type="button" class="btn header-btn">
      <i class="material-icons md-36">shopping_cart</i>
      <br>Cart
	</button></div>
	</div>
</div>
</div></div>